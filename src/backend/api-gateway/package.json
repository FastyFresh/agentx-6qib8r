{
  "name": "@agent-ai/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for the AGENT AI Platform with enhanced security and monitoring",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "jest --coverage --detectOpenHandles",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist coverage",
    "security-check": "npm audit && snyk test",
    "validate": "tsc --noEmit"
  },
  "dependencies": {
    "@kong/gateway": "1.0.0",
    "@opentelemetry/api": "^1.4.0",
    "@opentelemetry/sdk-node": "0.41.0",
    "amqplib": "^0.10.3",
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "express-openapi-validator": "^5.0.1",
    "express-pino-logger": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "7.0.1",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "http-proxy-middleware": "2.0.6",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.2",
    "joi": "17.9.2",
    "jsonwebtoken": "^9.0.1",
    "jwt-decode": "^3.1.2",
    "morgan": "^1.10.0",
    "opossum": "^7.1.0",
    "performance-now": "^2.1.0",
    "pino": "^8.14.1",
    "prom-client": "^14.2.0",
    "rate-limiter-flexible": "2.4.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@jest/types": "^29.6.1",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jest": "29.6.0",
    "@types/node": "18.0.0",
    "@types/security-validator": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "eslint": "8.42.0",
    "jest": "^29.6.0",
    "nodemon": "2.0.22",
    "rimraf": "5.0.1",
    "snyk": "1.1160.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}