# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=debug
HOST=0.0.0.0
SHUTDOWN_TIMEOUT=30000
REQUEST_TIMEOUT=60000
MAX_PAYLOAD_SIZE=50mb

# Database Configuration
POSTGRES_HOST=localhost
