{
  "name": "@agent-platform/monitoring-service",
  "version": "1.0.0",
  "description": "Comprehensive monitoring service for the AGENT AI Platform providing metrics collection, system telemetry, distributed tracing, and real-time alerts",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "rimraf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "security:audit": "npm audit",
    "docker:build": "docker build -t monitoring-service .",
    "docker:run": "docker run -p 3000:3000 monitoring-service",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "prom-client": "^14.2.0",
    "ws": "8.13.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "@opentelemetry/sdk-node": "0.41.0",
    "@opentelemetry/auto-instrumentations-node": "0.37.0",
    "@opentelemetry/api": "^1.4.0",
    "nodemailer": "6.9.4",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "7.0.1",
    "node-cron": "3.0.2",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.3.2",
    "express-openapi-validator": "^5.0.1",
    "pino": "^8.14.1",
    "express-pino-logger": "^7.0.0",
    "opossum": "^7.1.0",
    "performance-now": "^2.1.0"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "@types/express": "4.17.17",
    "@types/ws": "8.5.5",
    "@types/nodemailer": "6.4.9",
    "@types/jest": "29.6.0",
    "@types/cors": "2.8.13",
    "@types/node-cron": "3.0.8",
    "@types/node": "18.0.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "nodemon": "2.0.22",
    "ts-node": "10.9.1",
    "eslint": "8.42.0",
    "@typescript-eslint/parser": "5.60.0",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "prettier": "2.8.8",
    "supertest": "^6.3.3",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "rimraf": "5.0.1",
    "npm-run-all": "4.1.5",
    "ioredis-mock": "^8.8.1",
    "testcontainers": "^9.8.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}